        </property>

        <property name="addresses">
            <list>
                <value>Beijing</value>
                <value>Shanghai</value>
                <value>Shenzhen</value>
                <value>Shenzhen</value>
                <value>Shenzhen</value>
            </list>
        </property>

        <property name="qqs">
