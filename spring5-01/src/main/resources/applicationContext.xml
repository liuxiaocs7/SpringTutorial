        <property name="emails">
            <list>
                <value>suns@zparkhr.com.cn</value>
                <value>liucy@zparkhr.com.cn</value>
                <value>chenyn@zparkhr.com.cn</value>
            </list>
        </property>

        <property name="tels">
            <set>
