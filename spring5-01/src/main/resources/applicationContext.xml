    <!--顺序和个数都需要和构造参数保持一致-->
    <bean id="customer" class="com.liuxiaocs.constructor.Customer">
        <!--<constructor-arg>-->
            <!--<value>liuxiaocs</value>-->
        <!--</constructor-arg>-->
        <!--参数数量相同时，需要指定类型加以区分-->
        <constructor-arg type="int">
            <value>12</value>
        </constructor-arg>
    </bean>

